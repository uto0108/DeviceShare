<% if post.liked_by?(current_customer) %>
  <%= link_to public_post_likes_path(post.id), method: :delete, remote: true do %>
    <div class="balloonoya">
      <h3 class="fa-solid fa-heart red"></h3><span style='font-size : 28px;', class="black"><%= post.likes.count %></span>
      <span class="balloon balloon4">いいねを取り消す</span>
    </div>
  <% end %>
<% else %>
  <%= link_to public_post_likes_path(post.id), method: :post, remote: true do %>
    <div class="balloonoya">
      <h3 class="fa-regular fa-heart red"></h3><span style='font-size : 28px;', class="black"><%= post.likes.count %></span>
      <span class="balloon balloon2">いいね</span>
    </div>
  <% end %>
<% end %>
