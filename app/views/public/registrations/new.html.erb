<div class = "container">
  <div class = "row">
    <div class = "col-sm-3"></div>
    <div class = "col-sm-6">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class = "box2">

          <div class = "box-inner">
            <h2>アカウントを作成</h2>
            <div class="box-name">
              <%= f.label :name,"名前" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", class:"form-control" %>
            </div>

            <div class="box-email">
              <%= f.label :email,"Eメール" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
            </div>

            <div class="box-password">
              <%= f.label :password,"パスワード" %>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "最低６文字以上必要です" %>
            </div>

            <div class="box-password">
              <%= f.label :password_confirmation,"もう一度パスワードを入力してください" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="box-login">
              <%= f.submit "会員登録" %>
            </div>
          <div>
            <div class="box-newusr">
            <p><span>-----</span> DeviceShareのアカウントをお持ちですか？ <span>-----</span></p>
            <%= link_to "DeviceShareにログイン", new_session_path(resource_name) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
