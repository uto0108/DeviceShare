<div class="container">
  <div class="row">
    <div class="col-sm-3 col-md-offset-3"></div>
    <div class="col-sm-6">
      <h2>お気に入り一覧</h2>

        <table class= "table">
          <thead>
            <tr>
              <th>image</th>
              <th>title</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @favorites.each do |favorite| %>
              <tr>
                <td><%= image_tag favorite.get_post_image(50, 50) %></td>
                <td><%= favorite.title %></td>
                <td><%= link_to 'Show', public_post_path(favorite.id), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>
