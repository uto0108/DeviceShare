<div class = "customer-show">
  <table class="table">
    <tbody>
      <tr>
        <th>ユーザー画像</th>
        <th class = "show-name"><%= image_tag @customer.get_profile_image(200, 200) %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th class = "show-name"><%= @customer.name %></th>
      </tr>
      <% if @customer.id == current_customer.id %>
        <tr>
          <th>メールアドレス</th>
          <th class = "show-name"><%= @customer.email %></th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th class = "show-name"><%= @customer.followings.count %></th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th class = "show-name"><%= @customer.followers.count %></th>
        </tr>
        <tr>
          <th class = "show-name">
            <%= link_to "フォローユーザー", public_customer_followings_path(@customer) %>
          </th>
        </tr>
        <tr>
          <th class = "show-name">
            <%= link_to "フォロワーユーザー", public_customer_followers_path(@customer) %>
          </th>
        </tr>

      <% else %>
        <% if current_customer.following?(@customer) %>
          <%= link_to "フォロー外す", public_customer_relationships_path(@customer), method: :delete %>
        <% else %>
          <%= link_to "フォローする", public_customer_relationships_path(@customer), method: :post %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% if @customer.id == current_customer.id %>
    <%= link_to "ユーザー情報編集", edit_public_customer_path, class:"btn btn-primary" %>
  <% end %>

</div>