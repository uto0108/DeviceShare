<div class = "container">
  <div class = "row">
    <div class = "col-sm-3"></div>
    <div class = "col-sm-6">
      <h2>投稿画面</h2>
      <%= form_with model: @post, url: public_posts_path, method: :post do |f| %>
        <div class="form-group">
          <label for="item_name">投稿タイトル</label>
          <%= f.text_field :title, class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="item_image">投稿画像</label>
          <%= f.file_field :post_image, accept: "image/*", class:"form-control-file item_image" %>
        </div>
        <div class="form-group">
          <label for="item_introduction">本文</label>
          <%= f.text_area :body, class:"form-control name" %>
        </div>
        <div>
          <label for="item_price">ジャンル</label>
          <%= f.collection_select :category_id, Category.all, :id, :category, include_blank: "選択して下さい" %>
        </div>

        <div class="form-group row" id="star">
          <%= f.label :star,'レビュー', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :star, id: :review_star %>
        　　　　</div>
        <script>
        $('#star').raty({
          size     : 36,
          starOff: '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',

          scoreName: 'post[star]',
          half: false,
        });
        </script>

        <div class="item-edit-btn">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>