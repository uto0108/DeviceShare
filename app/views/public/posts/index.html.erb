<div class = "container">
  <div class = "row">
    <div class ="title-name">
        <h2 style="display:inline">投稿一覧 </h2> <p style="display:inline">(全<%= @posts.count %>件)</p>
    </div>
  </div>



  <div class = "row">
    <% @posts.each do |post| %>

      <div class="index-card">
        <%= link_to public_post_path(post.id), {class: "link"} do %>
          <div class = "index-body">
            <%= image_tag post.get_post_image(200, 200) %>
          </div>
          <div class="index-title">
            <%= post.title %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>