<div class = "container">
  <div class = "row">
    <div class = "col-sm-3"></div>
    <div class = "col-sm-6">
      <h2>検索結果</h2>

      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">会員</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">投稿</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <table class= "table">
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td><%= image_tag customer.get_profile_image(50, 50), class:"rounded-circle"; %></td>
                  <td><%= customer.name %></td>
                  <td>
                    <%= link_to "詳細", public_customer_path(customer.id), class: 'btn btn-success'%>
                  </td>
                </tr>
              <% end %>
              <% if @customers.size == 0 %>
                <p>検索結果がありませんでした</p>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <table class= "table">
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= image_tag post.get_post_image(50, 50) %></td>
                  <td><%= post.title %></td>
                  <td><%= post.category.category %></td>
                  <td>
                    <%= link_to "詳細", public_post_path(post.id), class: 'btn btn-success'%>
                  </td>
                </tr>
              <% end %>
              <% if @posts.size == 0 %>
                <p>検索結果がありませんでした</p>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

