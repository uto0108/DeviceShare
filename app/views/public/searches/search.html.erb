<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= image_tag customer.get_profile_image(50, 50) %></td>
          <td><%= customer.name %></td>
          <td>
            <%= link_to "詳細", public_customer_path(customer.id), class: 'btn btn-success'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.get_post_image(50, 50) %></td>
          <td><%= post.title %></td>
          <td>
            <%= link_to "詳細", public_post_path(post.id), class: 'btn btn-success'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>