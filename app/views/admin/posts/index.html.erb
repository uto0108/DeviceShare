<div class = "container">
  <div class = "row">
    <div class = "col-sm-2"></div>
    <div class = "col-sm-8">
      <h2>投稿一覧</h2>
      <table class = "table">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>投稿画像</th>
            <th>投稿ユーザー名</th>
            <th>投稿タイトル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td>
                <%= image_tag post.get_post_image(50, 50) %>
              </td>
              <td>
                <%= post.customer.name %>
              </td>
              <td>
                <%= post.title %>
              </td>
              <td>
                <%= link_to "Show", admin_post_path(post), class:"btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>