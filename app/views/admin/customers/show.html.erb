<div class = "container">
  <div class = "row">
    <div class = "col-sm-3"></div>
    <div class = "col-sm-6">
      <h2>ユーザー詳細</h2>
      <div class = "customer-show">
        <table class="table">
          <tbody>
            <tr>
              <th>ユーザー画像</th>
              <th class = "show-name"><%= image_tag @customer.get_profile_image(200, 200) %></th>
            </tr>
            <tr>
              <th>氏名</th>
              <th class = "show-name"><%= @customer.name %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th class = "show-name"><%= @customer.email %></th>
            </tr>
          </tbody>
        </table>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
          <div class = "is_active-radio">
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会中', value: true %>
          </div>
          <div class = "is_active-radio">
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '入会中', value: false %>
          </div>
          <div class="customer-edit" style="display:inline">
            <%= f.submit "退会ステータス変更", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>